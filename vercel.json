{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(Payment|Admin|Data)(?:/)?$", "dest": "/$1/index.html" },
    { "src": "/(Payment|Admin|Data)/(.*)", "dest": "/$1/$2" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
